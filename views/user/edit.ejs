<div class="container minHeight">
  <div class="row_createMember">
    <div class="col l2 "></div>
    <div class="col l8 card mainForm" style="min-height: 500px">
      <% if (flash && flash.err) { %>
      <ul>
        <% Object.keys(flash.err).forEach(function(error){ %>
        <li>
          <%- JSON.stringify(flash.err[error]) %>
        </li>
        <% }) %>
      </ul>
      <% } %>

      <div class="row">

        <div class="col s12">
          <ul class="tabs tabs-fixed-width blue-grey darken-4">
            <li class="tab col s3"><a class="active grey-text text-lighten-4" href="#test1">Basic Information</a></li>
            <li class="tab col s3"><a class="grey-text text-lighten-4" href="#test2">Change Password</a></li>
            <li class="tab col s3"><a class="grey-text text-lighten-4" href="#test3">Edit Profile Picture</a></li>
          </ul>
        </div>

        <div class="container">

          <div id="test1" class="col s12">
            <h4 class="center">Edit Basic Information</h4>
            <br/>
            <form role="form" method="post" id="createUserForm" name="createUserForm"
                  action="/user/update/<%= user.id %>" class="mainForm">
              <div class="section-content">
                <div class="row">
                  <div class="input-field col s4">
                    <input name="firstName" id="firstName" type="text" class="validate" value="<%= user.firstName %>">
                    <label for="firstName" data-error="">First Name</label>
                  </div>
                  <div class="input-field col s4">
                    <input name="lastName" id="lastName" type="text" class="validate" required=""
                           value="<%= user.lastName %>">
                    <label for="lastName" data-error="">Last Name</label>
                  </div>
                  <div class="input-field col s4">
                    <input name="email" type="email" class="validate" value="<%= user.email %>">
                    <label for="email" data-error="">Email Address</label>
                  </div>
                </div>
                <div class="row">
                  <div class="col s12">
                    <input type="checkbox" name="isAdmin" id="isAdmin" class=""/>
                    <label for="isAdmin">Administrator User</label>
                  </div>
                </div>
                <div class="row right-align">
                  <div class="input-field col s12">
                    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
                  </div>
                </div>
              </div>
            </form>
          </div>

          <div id="test2" class="col s12">
            <h4 class="center">Change Password</h4>
            <br/>
            <form role="form" method="post" id="changePasswordForm" name="changePasswordForm"
                  action="/user/update/<%= user.id %>" class="mainForm">
              <div class="section-content">
                <div class="row">
                  <div class="input-field col s4">
                    <input name="oldPassword" type="text" class="validate">
                    <label for="oldPassword" data-error="">Old Password</label>
                  </div>
                  <div class="input-field col s4">
                    <input name="newPassword" type="text" class="validate">
                    <label for="newPassword" data-error="">New Password</label>
                  </div>
                  <div class="input-field col s4">
                    <input name="passwordConfirmation" type="text" class="validate">
                    <label for="passwordConfirmation" data-error="">Password Confirmation</label>
                  </div>
                </div>
                <div class="row right-align">
                  <div class="input-field col s12">
                    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>

        <div id="test3" class="col s12">
          <h4 class="center">Edit Profile Picture</h4>
          <br/>
          <form action="#">
            <div class="file-field input-field">
              <div class="btn">
                <span>File</span>
                <input type="file">
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
              </div>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>
